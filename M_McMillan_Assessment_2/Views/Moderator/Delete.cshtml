@model M_McMillan_Assessment_2.Models.Category

@{
    ViewBag.Title = "Delete Category";
}

<h3>Are you sure you want to delete this Category?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.CategoryName):
        </dt>

        <dd class="mt-2">
            @Html.DisplayFor(model => model.CategoryName)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-outline-danger me-3" />
            @Html.ActionLink("Back to Categories", "ViewAllCategories", null, htmlAttributes: new { @class = "btn btn-outline-secondary"})
        </div>
    }
</div>
