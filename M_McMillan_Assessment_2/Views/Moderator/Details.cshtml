@model M_McMillan_Assessment_2.Models.Category

@{
    ViewBag.Title = "Category Details";
}

<h2>Category Details: </h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.CategoryName):
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CategoryName)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.CategoryId }, htmlAttributes: new { @class = "btn btn-outline-secondary me-3"})
    @Html.ActionLink("Back to Categories", "ViewAllCategories", null, htmlAttributes: new { @class = "btn btn-outline-secondary"})
</p>
