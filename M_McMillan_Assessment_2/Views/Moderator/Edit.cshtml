@model M_McMillan_Assessment_2.Models.Category

@{
    ViewBag.Title = "Edit Category";
}

<h2>Edit Category: </h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.CategoryId)

        <div class="form-group">
            <h5>Category: </h5>
            <div class="col-md-10">
                @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-outline-secondary mt-3 mb-3" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to Categories", "ViewAllCategories", null, htmlAttributes: new { @class = "btn btn-outline-secondary"})
</div>
