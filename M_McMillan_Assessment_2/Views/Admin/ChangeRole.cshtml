@model M_McMillan_Assessment_2.Models.ViewModels.ChangeRoleViewModel
@{
    ViewBag.Title = "ChangeRole";
}

<h2>ChangeRole</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Change Role for @Model.UserName</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <h5>Role: </h5>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Role, Model.Roles, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Role, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Change" class="btn btn-outline-secondary mt-3 mb-3" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to Users", "Index", null, htmlAttributes: new { @class = "btn btn-outline-secondary "})
</div>
